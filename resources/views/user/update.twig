{% extends 'templates/app.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block extrajs %}
	<script>
	// shamelessly stolen from stackoverflow
	$(function() {
		$("textarea").bind('input propertychange', function() {
			var maxLength  = 500;
			var usedLength = $(this).val().length;
			if (usedLength > maxLength) {
				$(this).val($(this).val().substring(0, maxLength));
				usedLength = $(this).val().length;
			}
			$('#remaining').html(maxLength - usedLength + ' characters remaining');
		});
	});
	</script>
{% endblock %}

{% block extracss %}
	<style>
	#bio {
		resize: vertical;
	}
	</style>
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-2">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Edit Profile</h3>
				</div>

				<div class="panel-body">
					{% if not admin_editing %}
						<p>
							Need to change your password? <a href="{{ path_for('auth.password.change') }}">Click here</a>!
						</p>
					{% endif %}

					<form action="{{ path_for('user.profile.edit', {'id': id}) }}" method="post" autocomplete="off">
						<h4>
							Details
						</h4>

						<div class="form-group{{ errors.name ? ' has-error' : '' }}">
							<label for="website">Display Name</label>
							<input type="text" name="name" id="name" placeholder="" class="form-control" value="{{ (old.name ? old.name : user.name) | default(auth.user.name) }}" maxlength="50">
							{% if errors.name %}
								<span class="help-block">{{ errors.name | first }}</span>
							{% endif %}
						</div>

						<div class="form-group{{ errors.website ? ' has-error' : '' }}">
							<label for="website">Website</label>
							<input type="url" name="website" id="website" placeholder="http://domain.ext" class="form-control" value="{{ (old.website ? old.website : user.website) | default(auth.user.website) }}" maxlength="255">
							{% if errors.website %}
								<span class="help-block">{{ errors.website | first }}</span>
							{% endif %}
						</div>

						<div class="form-group{{ errors.bio ? ' has-error' : '' }}">
							<label for="bio">Bio (supports GitHub Flavored Markdown)</label>
							<textarea name="bio" id="bio" cols="30" rows="10" class="form-control" placeholder="Your life story.">{{ (old.bio ? old.bio : user.bio) | default(auth.user.bio) }}</textarea>
							<span class="help-block" id="remaining"></span>
							{% if errors.bio %}
								<span class="help-block">{{ errors.bio | first }}</span>
							{% endif %}
						</div>

						<h4>
							Default privacy setting
						</h4>

						{% include 'templates/partials/forms/privacy-levels.twig' %}

						<h4>
							Site settings
						</h4>

						<div class="form-group{{ errors.items_per_page ? ' has-error' : '' }}">
							<label for="items_per_page">Items per page</label>
							<input type="number" name="items_per_page" id="items_per_page" placeholder="10" class="form-control" value="{{ (old.items_per_page ? old.items_per_page : user.settings.items_per_page) | default(auth.user.settings.items_per_page) }}" min="5" max="50" step="1">

							{% if errors.items_per_page %}
								<span class="help-block">{{ errors.items_per_page | first }}</span>
							{% endif %}
						</div>

						<button type="submit" class="btn btn-default">Submit</button>

						{{ csrf.field | raw }}
					</form>
				</div>
			</div>
		</div>

		{% include 'templates/partials/privacy-levels-desc.twig' %}
	</div>
{% endblock %}
