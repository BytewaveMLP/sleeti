{% set default_privacy_state = auth.user.settings.default_privacy_state %}
{% if admin_editing %}
	{% set default_privacy_state = user.settings.default_privacy_state %}
{% endif %}

<div class="radio">
	<label>
		<input type="radio" name="privacy" id="public" value="public"{% if default_privacy_state == constant('Sleeti\\Models\\File::PRIVACY_PUBLIC') %} checked{% endif %}>
		Public
	</label>
</div>

<div class="radio">
	<label>
		<input type="radio" name="privacy" id="unlisted" value="unlisted"{% if default_privacy_state == constant('Sleeti\\Models\\File::PRIVACY_UNLISTED') %} checked{% endif %}>
		Unlisted
	</label>
</div>

<div class="radio">
	<label>
		<input type="radio" name="privacy" id="private" value="private"{% if default_privacy_state == constant('Sleeti\\Models\\File::PRIVACY_PRIVATE') %} checked{% endif %}>
		Private
	</label>
</div>
